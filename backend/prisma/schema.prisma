generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
    id Int @id @default(autoincrement())
    name String
    layers LayerType[]
    users User[] @relation("UserProject")
    assets Asset[]
}
model LayerType {
    id Int @id @default(autoincrement())
    label String
    value String
    projectId Int
    project Project @relation(fields: [projectId], references: [id])
}
model User {
    id Int @id @default(autoincrement())
    email String @unique
    passwordHash String
    name String
    projects Project[] @relation("UserProject")
}
model Asset {
    id Int @id @default(autoincrement())
    name String
    description String
    data Bytes
    itemWidth Int
    itemHeight Int
    ItemSpacing Int
    projectId Int
    project Project @relation(fields: [projectId], references: [id])
}